{
        "cmake.configureOnOpen": false,
        "files.eol": "\n",
        "editor.formatOnSave": true,
        "clang-format.executable": "clang-format",
        "C_Cpp.clang_format_path": "${workspaceRoot}/.clang-format",
        "files.associations": {
                "type_traits": "cpp",
                "__config": "cpp",
                "__nullptr": "cpp",
                "cstddef": "cpp",
                "exception": "cpp",
                "initializer_list": "cpp",
                "new": "cpp",
                "stdexcept": "cpp",
                "typeinfo": "cpp",
                "algorithm": "cpp",
                "cstdint": "cpp",
                "functional": "cpp",
                "tuple": "cpp",
                "utility": "cpp"
        }
}